
# source: https://tiswww.case.edu/php/chet/readline/readline.html#Readline-Init-File
# source: readline(3)

# include global system inputrc
$include /etc/inputrc

# mappings for Ctrl-left-arrow and Ctrl-right-arrow for word moving
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C":   forward-word
"\e[5D":   backward-word
"\e\e[C":  forward-word
"\e\e[D":  backward-word

# alternate mappings for "page up" and "page down" to search the history
"\e[5~": history-search-backward
"\e[6~": history-search-forward

# Insert each paste into the editing buffer as a
# single string of characters, instead of treating
# each character as if it had been read from the keyboard
# source: https://tiswww.case.edu/php/chet/readline/rluserman.html#index-enable_002dbracketed_002dpaste
set enable-bracketed-paste on

# never ring a bell on tab-completion
set bell-style none
